hoisted_3","_createCommentVNode","_createElementVNode","_hoisted_7"],"sourceRoot":"","sources":["E:\\Github\\blog\\aurora-vue\\aurora-blog\\src\\views\\slider.vue"],"sourcesContent":["<template>\r\n<!-- 轮播图开始 -->\r\n<div class=\"lunbo\">\r\n    <div class=\"slider\" ref=\"slider\">\r\n        <ul id=\"useIt\">\r\n            <li class=\"useIt\">\r\n                <a href=\"#\"><img src=\"../assets/images/1.jpg\" ></a>\r\n            </li>\r\n            <li class=\"useIt\">\r\n                <a href=\"#\"><img src=\"../assets/images/2.jpg\" ></a>\r\n            </li>\r\n            <li class=\"useIt\">\r\n                <a href=\"#\"><img src=\"../assets/images/3.jpg\" ></a>\r\n            </li>\r\n            <li class=\"useIt\">\r\n                <a href=\"#\"><img src=\"../assets/images/4.jpg\" ></a>\r\n            </li>\r\n        </ul>\r\n        <div class=\"my-el-button\" id=\"button-l\">&lt;</div>\r\n        <div class=\"my-el-button\" id=\"button-r\">></div>\r\n        <ul id=\"yuan\">\r\n            <li class=\"yuan\"></li>\r\n            <li class=\"yuan\"></li>\r\n            <li class=\"yuan\"></li>\r\n            <li class=\"yuan\"></li>\r\n        </ul>\r\n    </div>\r\n</div>\r\n</template>\r\n\r\n<script>\r\nexport default{\r\nmounted() {\r\n    this.initSlider();\r\n  },\r\n  methods: {\r\n    initSlider() {\r\n      const useIts = this.$refs.slider.querySelectorAll('.useIt');\r\n      const yuans = this.$refs.slider.querySelectorAll('.yuan');\r\n      const leftBtn = this.$refs.slider.querySelector('#button-l');\r\n      const rightBtn = this.$refs.slider.querySelector('#button-r');\r\n      const content = this.$refs.slider.querySelector('.slider');\r\n      let index = 0;\r\n      let timer = null;\r\n\r\n      //清除class\r\n      const clearclass = () => {\r\n        for (let i = 0; i < useIts.length; i++) {\r\n          useIts[i].className = \"useIt\";\r\n          yuans[i].className = \"yuan\";\r\n          yuans[i].setAttribute(\"num\", i);\r\n        }\r\n      }\r\n\r\n      /*只显示一个class*/\r\n      function move() {\r\n        clearclass();\r\n        useIts[index].className = \"useIt active\";\r\n        yuans[index].className = \"yuan white\";\r\n      }\r\n\r\n      //点击右边按钮切换下一张图片\r\n      rightBtn.onclick = () => {\r\n        if (index < useIts.length - 1) {\r\n          index++;\r\n        } else {\r\n          index = 0;\r\n        }\r\n        move();\r\n      }\r\n\r\n      //点击左边按钮切换上一张图片\r\n      leftBtn.onclick = () => {\r\n        if (index < useIts.length) {\r\n          index--;\r\n        } else {\r\n          index = useIts.length - 1;\r\n        }\r\n        move();\r\n      }\r\n\r\n      //开始定时器，点击右边按钮，实现轮播\r\n      timer = setInterval(() => {\r\n        rightBtn.onclick();\r\n      }, 3000);\r\n\r\n      //点击圆点时，跳转到对应图片\r\n      yuans.forEach(yuan => {\r\n        yuan.addEventListener(\"click\", function () {\r\n          const point_index = this.getAttribute(\"num\");\r\n          index = point_index;\r\n          move();\r\n        });\r\n      });\r\n\r\n      //鼠标移入清除定时器，并开启一个三秒的定时器，使慢慢转动\r\n      content.onmouseover = () => {\r\n        clearInterval(timer);\r\n        timer = setInterval(() => {\r\n          rightBtn.onclick();\r\n        }, 3000);\r\n      }\r\n\r\n      //鼠标移出又开启定时器\r\n      content.onmouseleave = () => {\r\n        clearInterval(timer);\r\n        timer = setInterval(() => {\r\n          rightBtn.onclick();\r\n        }, 1500);\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n\r\n<style>\r\n\r\n.lunbo {\r\n    width: 100%;\r\n}\r\n\r\n.slider {\r\n    width: 1000px;\r\n    height: 372px;\r\n    margin: 0px auto;\r\n    position: relative;\r\n}\r\n\r\n\r\n\r\n.lunbo .slider img {\r\n    width: 100%;\r\n}\r\n\r\n#button-l {\r\n    width: 30px;\r\n    height: 69px;\r\n    font-size: 30px;\r\n    color: white;\r\n    background-color: rgba(0, 0, 0, 0.4);\r\n    line-height: 69px;\r\n    padding-left: 5px;\r\n    z-index: 10;\r\n\r\n    position: absolute;\r\n    left: 0;\r\n    top: 50%;\r\n    transform: translateY(-60%);\r\n   \r\n    cursor: pointer;\r\n    opacity: 0;\r\n  \r\n}\r\n\r\n.lunbo:hover #button-l {\r\n\r\n    opacity: 1;\r\n}\r\n\r\n#button-r {\r\n    width: 30px;\r\n    height: 69px;\r\n    font-size: 30px;\r\n    color: rgb(65, 52, 52);\r\n    background-color: rgba(0, 0, 0, 0.4);\r\n    line-height: 69px;\r\n    padding-left: 5px;\r\n    z-index: 10;\r\n    position: absolute;\r\n    right: 0;\r\n    top: 50%;\r\n    cursor: pointer;\r\n    opacity: 0;\r\n    transform: translateY(-60%);\r\n}\r\n\r\n.lunbo:hover #button-r {\r\n    opacity: 1;\r\n}\r\n\r\n#useIt {\r\n    width: 100%;\r\n    height: 100%;\r\n}\r\n\r\n.useIt {\r\n    position: absolute;\r\n    opacity: 0;\r\n    transition: all 1s;\r\n}\r\n\r\n.useIt img{\r\n    background-repeat: no-repeat;\r\n    background-image: url(../assets/images/1.jpg);\r\n\r\n}\r\n\r\n.useIt.active {\r\n    opacity: 1;\r\n}\r\n\r\n\r\n#yuan {\r\n    height: 20px;\r\n    display: flex;\r\n    position: absolute;\r\n    bottom: 35px;\r\n    right: 25px;\r\n}\r\n\r\n.yuan {\r\n    width: 10px;\r\n    height: 10px;\r\n    border-radius: 10px;\r\n    border: 2px solid white;\r\n    background: rgba(0, 0, 0, 0.4);\r\n    cursor: pointer;\r\n    margin: 5px;\r\n    ma\r\n}\r\n\r\n.white {\r\n    background-color: #FFFFFF;\r\n}\r\n</style>"]},"metadata":{},"sourceType":"module"}
{"ast":null,"code":"export default {\n  mounted() {\n    this.initSlider();\n  },\n\n  methods: {\n    initSlider() {\n      const useIts = this.$refs.slider.querySelectorAll('.useIt');\n      const yuans = this.$refs.slider.querySelectorAll('.yuan');\n      const leftBtn = this.$refs.slider.querySelector('#button-l');\n      const rightBtn = this.$refs.slider.querySelector('#button-r');\n      const content = this.$refs.slider.querySelector('.slider');\n      let index = 0;\n      let timer = null; //清除class\n\n      const clearclass = () => {\n        for (let i = 0; i < useIts.length; i++) {\n          useIts[i].className = \"useIt\";\n          yuans[i].className = \"yuan\";\n          yuans[i].setAttribute(\"num\", i);\n        }\n      };\n      /*只显示一个class*/\n\n\n      function move() {\n        clearclass();\n        useIts[index].className = \"useIt active\";\n        yuans[index].className = \"yuan white\";\n      } //点击右边按钮切换下一张图片\n\n\n      rightBtn.onclick = () => {\n        if (index < useIts.length - 1) {\n          index++;\n        } else {\n          index = 0;\n        }\n\n        move();\n      }; //点击左边按钮切换上一张图片\n\n\n      leftBtn.onclick = () => {\n        if (index < useIts.length) {\n          index--;\n        } else {\n          index = useIts.length - 1;\n        }\n\n        move();\n      }; //开始定时器，点击右边按钮，实现轮播\n\n\n      timer = setInterval(() => {\n        rightBtn.onclick();\n      }, 3000); //点击圆点时，跳转到对应图片\n\n      yuans.forEach(yuan => {\n        yuan.addEventListener(\"click\", function () {\n          const point_index = this.getAttribute(\"num\");\n          index = point_index;\n          move();\n        });\n      }); //鼠标移入清除定时器，并开启一个三秒的定时器，使慢慢转动\n\n      content.onmouseover = () => {\n        clearInterval(timer);\n        timer = setInterval(() => {\n          rightBtn.onclick();\n        }, 3000);\n      }; //鼠标移出又开启定时器\n\n\n      content.onmouseleave = () => {\n        clearInterval(timer);\n        timer = setInterval(() => {\n          rightBtn.onclick();\n        }, 1500);\n      };\n    }\n\n  }\n};","map":{"version":3,"mappings":"AA+BA,eAAc;EACdA,OAAO,GAAG;IACN,KAAKC,UAAL;EACD,CAHW;;EAIZC,OAAO,EAAE;IACPD,UAAU,GAAG;MACX,MAAME,MAAK,GAAI,KAAKC,KAAL,CAAWC,MAAX,CAAkBC,gBAAlB,CAAmC,QAAnC,CAAf;MACA,MAAMC,KAAI,GAAI,KAAKH,KAAL,CAAWC,MAAX,CAAkBC,gBAAlB,CAAmC,OAAnC,CAAd;MACA,MAAME,OAAM,GAAI,KAAKJ,KAAL,CAAWC,MAAX,CAAkBI,aAAlB,CAAgC,WAAhC,CAAhB;MACA,MAAMC,QAAO,GAAI,KAAKN,KAAL,CAAWC,MAAX,CAAkBI,aAAlB,CAAgC,WAAhC,CAAjB;MACA,MAAME,OAAM,GAAI,KAAKP,KAAL,CAAWC,MAAX,CAAkBI,aAAlB,CAAgC,SAAhC,CAAhB;MACA,IAAIG,KAAI,GAAI,CAAZ;MACA,IAAIC,KAAI,GAAI,IAAZ,CAPW,CASX;;MACA,MAAMC,UAAS,GAAI,MAAM;QACvB,KAAK,IAAIC,IAAI,CAAb,EAAgBA,IAAIZ,MAAM,CAACa,MAA3B,EAAmCD,CAAC,EAApC,EAAwC;UACtCZ,MAAM,CAACY,CAAD,CAAN,CAAUE,SAAV,GAAsB,OAAtB;UACAV,KAAK,CAACQ,CAAD,CAAL,CAASE,SAAT,GAAqB,MAArB;UACAV,KAAK,CAACQ,CAAD,CAAL,CAASG,YAAT,CAAsB,KAAtB,EAA6BH,CAA7B;QACF;MACF,CANA;MAQA;;;MACA,SAASI,IAAT,GAAgB;QACdL,UAAU;QACVX,MAAM,CAACS,KAAD,CAAN,CAAcK,SAAd,GAA0B,cAA1B;QACAV,KAAK,CAACK,KAAD,CAAL,CAAaK,SAAb,GAAyB,YAAzB;MACF,CAvBW,CAyBX;;;MACAP,QAAQ,CAACU,OAAT,GAAmB,MAAM;QACvB,IAAIR,KAAI,GAAIT,MAAM,CAACa,MAAP,GAAgB,CAA5B,EAA+B;UAC7BJ,KAAK;QACP,CAFA,MAEO;UACLA,KAAI,GAAI,CAAR;QACF;;QACAO,IAAI;MACN,CAPA,CA1BW,CAmCX;;;MACAX,OAAO,CAACY,OAAR,GAAkB,MAAM;QACtB,IAAIR,KAAI,GAAIT,MAAM,CAACa,MAAnB,EAA2B;UACzBJ,KAAK;QACP,CAFA,MAEO;UACLA,KAAI,GAAIT,MAAM,CAACa,MAAP,GAAgB,CAAxB;QACF;;QACAG,IAAI;MACN,CAPA,CApCW,CA6CX;;;MACAN,KAAI,GAAIQ,WAAW,CAAC,MAAM;QACxBX,QAAQ,CAACU,OAAT;MACD,CAFkB,EAEhB,IAFgB,CAAnB,CA9CW,CAkDX;;MACAb,KAAK,CAACe,OAAN,CAAcC,IAAG,IAAK;QACpBA,IAAI,CAACC,gBAAL,CAAsB,OAAtB,EAA+B,YAAY;UACzC,MAAMC,WAAU,GAAI,KAAKC,YAAL,CAAkB,KAAlB,CAApB;UACAd,KAAI,GAAIa,WAAR;UACAN,IAAI;QACL,CAJD;MAKD,CAND,EAnDW,CA2DX;;MACAR,OAAO,CAACgB,WAAR,GAAsB,MAAM;QAC1BC,aAAa,CAACf,KAAD,CAAb;QACAA,KAAI,GAAIQ,WAAW,CAAC,MAAM;UACxBX,QAAQ,CAACU,OAAT;QACD,CAFkB,EAEhB,IAFgB,CAAnB;MAGF,CALA,CA5DW,CAmEX;;;MACAT,OAAO,CAACkB,YAAR,GAAuB,MAAM;QAC3BD,aAAa,CAACf,KAAD,CAAb;QACAA,KAAI,GAAIQ
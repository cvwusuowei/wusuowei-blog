{"ast":null,"code":"export default {\n  mounted() {\n    this.initSlider();\n  },\n\n  methods: {\n    initSlider() {\n      const useIt = this.$refs.slider.querySelectorAll('.useIt');\n      const circles = this.$refs.slider.querySelectorAll('.circle');\n      const leftBtn = this.$refs.slider.querySelector('#btn-left');\n      const rightBtn = this.$refs.slider.querySelector('#btn-right');\n      const content = this.$refs.slider.querySelector('.slider');\n      let index = 0;\n      let timer = null; //清除class\n\n      const clearclass = () => {\n        for (let i = 0; i < items.length; i++) {\n          items[i].className = \"useIt\";\n          circles[i].className = \"circle\";\n          circles[i].setAttribute(\"num\", i);\n        }\n      };\n      /*只显示一个class*/\n\n\n      function move() {\n        clearclass();\n        useIt[index].className = \"useIt active\";\n        circles[index].className = \"circle white\";\n      } //点击右边按钮切换下一张图片\n\n\n      rightBtn.onclick = () => {\n        if (index < items.length - 1) {\n          index++;\n        } else {\n          index = 0;\n        }\n\n        move();\n      }; //点击左边按钮切换上一张图片\n\n\n      leftBtn.onclick = () => {\n        if (index < items.length) {\n          index--;\n        } else {\n          index = items.length - 1;\n        }\n\n        move();\n      }; //开始定时器，点击右边按钮，实现轮播\n\n\n      timer = setInterval(() => {\n        rightBtn.onclick();\n      }, 3000); //点击圆点时，跳转到对应图片\n\n      circles.forEach(circle => {\n        circle.addEventListener(\"click\", function () {\n          const point_index = this.getAttribute(\"num\");\n          index = point_index;\n          move();\n        });\n      }); //鼠标移入清除定时器，并开启一个三秒的定时器，使慢慢转动\n\n      content.onmouseover = () => {\n        clearInterval(timer);\n        timer = setInterval(() => {\n          rightBtn.onclick();\n        }, 3000);\n      }; //鼠标移出又开启定时器\n\n\n      content.onmouseleave = () => {\n        clearInterval(timer);\n        timer = setInterval(() => {\n          rightBtn.onclick();\n        }, 1500);\n      };\n    }\n\n  }\n};","map":{"version":3,"mappings":"AA+BA,eAAc;EACdA,OAAO,GAAG;IACN,KAAKC,UAAL;EACD,CAHW;;EAIZC,OAAO,EAAE;IACPD,UAAU,GAAG;MACX,MAAME,KAAI,GAAI,KAAKC,KAAL,CAAWC,MAAX,CAAkBC,gBAAlB,CAAmC,QAAnC,CAAd;MACA,MAAMC,OAAM,GAAI,KAAKH,KAAL,CAAWC,MAAX,CAAkBC,gBAAlB,CAAmC,SAAnC,CAAhB;MACA,MAAME,OAAM,GAAI,KAAKJ,KAAL,CAAWC,MAAX,CAAkBI,aAAlB,CAAgC,WAAhC,CAAhB;MACA,MAAMC,QAAO,GAAI,KAAKN,KAAL,CAAWC,MAAX,CAAkBI,aAAlB,CAAgC,YAAhC,CAAjB;MACA,MAAME,OAAM,GAAI,KAAKP,KAAL,CAAWC,MAAX,CAAkBI,aAAlB,CAAgC,SAAhC,CAAhB;MACA,IAAIG,KAAI,GAAI,CAAZ;MACA,IAAIC,KAAI,GAAI,IAAZ,CAPW,CASX;;MACA,MAAMC,UAAS,GAAI,MAAM;QACvB,KAAK,IAAIC,IAAI,CAAb,EAAgBA,IAAIC,KAAK,CAACC,MAA1B,EAAkCF,CAAC,EAAnC,EAAuC;UACrCC,KAAK,CAACD,CAAD,CAAL,CAASG,SAAT,GAAqB,OAArB;UACAX,OAAO,CAACQ,CAAD,CAAP,CAAWG,SAAX,GAAuB,QAAvB;UACAX,OAAO,CAACQ,CAAD,CAAP,CAAWI,YAAX,CAAwB,KAAxB,EAA+BJ,CAA/B;QACF;MACF,CANA;MAQA;;;MACA,SAASK,IAAT,GAAgB;QACdN,UAAU;QACVX,KAAK,CAACS,KAAD,CAAL,CAAaM,SAAb,GAAyB,cAAzB;QACAX,OAAO,CAACK,KAAD,CAAP,CAAeM,SAAf,GAA2B,cAA3B;MACF,CAvBW,CAyBX;;;MACAR,QAAQ,CAACW,OAAT,GAAmB,MAAM;QACvB,IAAIT,KAAI,GAAII,KAAK,CAACC,MAAN,GAAe,CAA3B,EAA8B;UAC5BL,KAAK;QACP,CAFA,MAEO;UACLA,KAAI,GAAI,CAAR;QACF;;QACAQ,IAAI;MACN,CAPA,CA1BW,CAmCX;;;MACAZ,OAAO,CAACa,OAAR,GAAkB,MAAM;QACtB,IAAIT,KAAI,GAAII,KAAK,CAACC,MAAlB,EAA0B;UACxBL,KAAK;QACP,CAFA,MAEO;UACLA,KAAI,GAAII,KAAK,CAACC,MAAN,GAAe,CAAvB;QACF;;QACAG,IAAI;MACN,CAPA,CApCW,CA6CX;;;MACAP,KAAI,GAAIS,WAAW,CAAC,MAAM;QACxBZ,QAAQ,CAACW,OAAT;MACD,CAFkB,EAEhB,IAFgB,CAAnB,CA9CW,CAkDX;;MACAd,OAAO,CAACgB,OAAR,CAAgBC,MAAK,IAAK;QACxBA,MAAM,CAACC,gBAAP,CAAwB,OAAxB,EAAiC,YAAY;UAC3C,MAAMC,WAAU,GAAI,KAAKC,YAAL,CAAkB,KAAlB,CAApB;UACAf,KAAI,GAAIc,WAAR;UACAN,IAAI;QACL,CAJD;MAKD,CAND,EAnDW,CA2DX;;MACAT,OAAO,CAACiB,WAAR,GAAsB,MAAM;QAC1BC,aAAa,CAAChB,KAAD,CAAb;QACAA,KAAI,GAAIS,WAAW,CAAC,MAAM;UACxBZ,QAAQ,CAACW,OAAT;QACD,CAFkB,EAEhB,IAFgB,CAAnB;MAGF,CALA,CA5DW,CAmEX;;;MACAV,OAAO,CAACmB,YAAR,GAAuB,MAAM;QAC3BD,aAAa,CAAChB,KAAD,CAAb